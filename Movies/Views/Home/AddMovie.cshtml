@{
    ViewData["Title"] = "Add a Movie";
}

@model Movie

<h2>Add a Movie:</h2>
<form method="post">
    <label asp-for="Title">Title:</label>
    <input type="text" id="title" asp-for="Title" /><br />
    <label asp-for="CategoryId">Category:</label>
    <select id="Category" asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>    
    <br />
    <label asp-for="Year">Year:</label>
    <input type="number" id="Year" asp-for="Year" /><br />
    <label asp-for="Director">Director(s):</label>
    <input type="text" id="Director" asp-for="Director" /><br />
    <label asp-for="Rating">Rating:</label>
    <select id="Rating" asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select><br />
    <label asp-for="Edited">Edited:</label>
    <select id="Edited" asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />
    <label asp-for="Lent_To">Lent To:</label>
    <input type="text" id="Lent_to" asp-for="Lent_To" /><br />
    <label asp-for="Notes">Notes:</label>
    <input type="text" id="Notes" asp-for="Notes" /><br />

    <button type="submit">Save</button>

    <div asp-validation-summary="All"></div>
</form>
